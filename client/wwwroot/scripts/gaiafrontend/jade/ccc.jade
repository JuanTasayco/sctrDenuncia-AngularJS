.ccc
    div(ng-show="!singleField")
        .cccBankCode
            span.form-group.entidad
            label(for="{{bankCodeLabel}}", ng-class="{'sr-only':mpLabels === 'false'}", ng-hide="true") Entidad
            input.form-control(type="text",
                numbers-only,
                maxlength="4",
                ng-maxlength-="4",
                ng-minlength-="4",
                size="4",
                placeholder="0000",
                id="{{bankCodeLabel}}",
                mp-name="{{bankCodeLabel}}",
                ng-model="model.bankCode")

        .cccBranchCode
            span.form-group.oficina
            label(for="{{branchCodeLabel}}", ng-class="{'sr-only':mpLabels === 'false'}", ng-hide="true") Oficina
            input.form-control(type="text",
                numbers-only,
                maxlength="4",
                ng-maxlength-="4",
                ng-minlength-="4",
                size="4",
                placeholder="0000",
                id="{{branchCodeLabel}}",
                mp-name="{{branchCodeLabel}}", ng-model="model.branchCode")
        .cccCheckDigits
            span.form-group.digitoControl
            label(for="{{checkDigitsLabel}}", ng-class="{'sr-only':mpLabels === 'false'}", ng-hide="true") DC
            input.form-control(type="text",
                numbers-only,
                maxlength="2",
                ng-maxlength-="2",
                ng-minlength-="2",
                size="2",
                placeholder="00",
                id="{{checkDigitsLabel}}",
                mp-name="{{checkDigitsLabel}}",
                ng-model="model.checkDigits")
        .cccAccountNumber
            span.form-group.numeroCuenta
            label(for="{{accountNumberLabel}}", ng-class="{'sr-only':mpLabels === 'false'}", ng-hide="true") NÃºmero cuenta
            input.form-control(type="text",
                numbers-only,
                maxlength="10",
                ng-maxlength-="10",
                ng-minlength-="10",
                size="10",
                placeholder="0000000000",
                id="{{accountNumberLabel}}",
                mp-name="{{accountNumberLabel}}",
                ng-model="model.accountNumber")

    div(ng-show="singleField")
        .cccSingleField
            span.form-group
            label(for="{{cccSingleField}}", ng-class="{'sr-only':mpLabels === 'false'}", ng-hide="true") CCC
            input.form-control(type="text",
                numbers-only,
                maxlength="20",
                ng-maxlength-="20",
                ng-minlength-="20",
                size="20",
                placeholder="00000000000000000000",
                id="{{cccSingleField}}",
                mp-name="{{cccSingleField}}",
                ng-model="model.cccSingleField")