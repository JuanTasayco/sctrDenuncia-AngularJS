{
  "env": {
    "browser": true,
    "node": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended",
    "angular",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 5
  },
  "rules": {
    "prettier/prettier": ["error", {
      "bracketSpacing": false,
      "printWidth": 120,
      "singleQuote": true
    }],
    "func-call-spacing": ["error", "never"],
    "angular/controller-name": false
  }
}
